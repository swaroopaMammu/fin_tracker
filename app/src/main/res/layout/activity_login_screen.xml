<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="otp_screen"
            type="boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.ui.LoginScreen">

        <ImageView
            android:id="@+id/currency_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="currency logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:src="@drawable/baseline_currency_rupee_24"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/currency_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Enter your\nphone number"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mobile_number_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="+91 9645775419"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:drawableEnd="@drawable/baseline_create_24"
            app:layout_constraintTop_toBottomOf="@+id/title_text"/>
        <View
            android:id="@+id/mobile_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile_number_saved"
            android:background="@drawable/thin_border_blank_box_black"
            app:layout_constraintBottom_toBottomOf="@+id/mobile_number"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:paddingHorizontal="5dp"
            android:background="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/mobile_layout"
            app:layout_constraintTop_toBottomOf="@+id/mobile_number_saved"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mobile_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:inputType="number"
            android:maxLength="10"
            app:layout_constraintStart_toStartOf="@+id/mobile_layout"
            app:layout_constraintEnd_toEndOf="@+id/mobile_layout"
            app:layout_constraintTop_toTopOf="@+id/mobile_layout" />
        <View
            android:id="@+id/otp_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile_layout"
            android:background="@drawable/thin_border_blank_box_black"
            app:layout_constraintBottom_toBottomOf="@+id/otp_number"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/otp_sub_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:paddingHorizontal="5dp"
            android:background="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/otp_layout"
            app:layout_constraintTop_toBottomOf="@+id/mobile_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otp_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:inputType="number"
            android:maxLength="6"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/otp_layout"
            app:layout_constraintEnd_toEndOf="@+id/otp_layout"
            app:layout_constraintTop_toTopOf="@+id/otp_layout" />
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/otp_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="00:55"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/timer_text"
            android:background="@drawable/yellow_curver_button"
            android:text="Next"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="6dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/mobile_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>